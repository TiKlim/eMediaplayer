<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="759"
             xmlns:vm="clr-namespace:Mediaplayer2.ViewModels"
             x:DataType="vm:EditPlaylistViewModel"
             x:Class="Mediaplayer2.Views.EditPlaylistView"
             x:Name="EditPlaylist">
    <!--DataContext-->
    <UserControl.DataContext>
        <vm:EditPlaylistViewModel/>
    </UserControl.DataContext>
    <!--Главный Grid-->
    <Grid ShowGridLines="False"
          RowDefinitions="Auto,*,Auto"
          Background="{DynamicResource SecondaryColor}">
        <!--Grid для заголовка-->
        <Grid Grid.Row="0"
              ColumnDefinitions="*,13*"
              ShowGridLines="False">
            <!--Заголовок-->
            <StackPanel Grid.Column="1"
                        Grid.Row="0"
                        Orientation="Vertical"
                        Margin="30 50 0 0"
                        VerticalAlignment="Center">
                <!--Главный титл (для названия)-->
                <TextBlock Text="{Binding Main}"
                           FontSize="40"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <!--Второй титл (для исполнителя)-->
                <TextBlock Text="{Binding PreMain}"
                           FontSize="20"/>
            </StackPanel>
            <!--Кнопка для добавления аудио-файла-->
            <Button Grid.Column="1"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Margin="24 50 10 0"
                    Height="40"
                    Width="140"
                    Background="{DynamicResource PrimaryColor}"
                    CornerRadius="10"
                    Command="{Binding LoadFileCommand}">
                <TextBlock Text="{Binding LoadFile}"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>
            <DockPanel Grid.Column="1"
                        HorizontalAlignment="Right"
                        Margin="24 50 10 0">
                <TextBox Text="{Binding NewPlaylistName, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200"
                         Height="40"
                         VerticalAlignment="Center"/>
                <Button HorizontalAlignment="Right"
                        Margin="5 0 0 0"
                        VerticalAlignment="Center"
                        Height="40"
                        Width="170"
                        Background="{DynamicResource PrimaryColor}"
                        CornerRadius="10"
                        Command="{Binding CreatePlaylistCommand}">
                    <TextBlock Text="Добавить плейлист"
                               Foreground="White"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Button>
            </DockPanel>
        </Grid>
        <!--Grid для изображения (обложка трека)-->
        <Grid Grid.Row="1"
              ColumnDefinitions="*,13*"
              ShowGridLines="False">
            <Grid Grid.Column="1"
                  ColumnDefinitions="*,*"
                  RowDefinitions="*,*">
                <TextBox Grid.Row="1"
                         Grid.Column="0" 
                         Grid.ColumnSpan="2"
                         Text="{Binding NewPlaylistName, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200"
                         Height="40"
                         VerticalAlignment="Center"/>
                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Spacing="5">
                    <Image/>
                    <Button HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Height="40"
                            Width="190"
                            Background="{DynamicResource PrimaryColor}"
                            CornerRadius="10"
                            Command="{Binding CreatePlaylistCommand}">
                        <TextBlock Text="Удалить изображение"
                                   Foreground="White"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                    <Button HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Height="40"
                            Width="190"
                            Background="{DynamicResource PrimaryColor}"
                            CornerRadius="10"
                            Command="{Binding CreatePlaylistCommand}">
                        <TextBlock Text="Добавить изображение"
                                   Foreground="White"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>
                <ItemsControl Grid.Row="0"
                              Grid.Column="1"
                              ItemsSource="{Binding Playlists}"
                              IsVisible="True"
                              Margin="20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" 
                                        Margin="10">
                                <Image Source="{DynamicResource ListStopBack}"
                                       Width="50" 
                                       Height="50" 
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}"
                                           FontSize="20"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
        <!--Grid для нижней панели-->
        <Grid Grid.Column="0"
              Grid.Row="2"
              ColumnDefinitions="*,13*"
              ShowGridLines="False">
            <!---->
            <Button Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalContentAlignment="Center"
                    Margin="24"
                    Background="{DynamicResource PrimaryColor}"
                    Height="40"
                    Width="180"
                    CornerRadius="10"
                    Command="{Binding SaveCommand}">
                <TextBlock Text="{Binding SaveFile}"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>
            <!---->
            <Button Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalContentAlignment="Center"
                    Margin="24"
                    Background="{DynamicResource PrimaryColor}"
                    Height="40"
                    Width="180"
                    CornerRadius="10"
                    Command="{Binding CancelCommand}">
                <TextBlock Text="{Binding Cancel}"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>
